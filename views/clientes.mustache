<script>
    function listClientes() {
        $.ajax({
            type: 'GET',
            url: `/clientes-list`,
            dataType: 'json',
            success: function (data) {
                console.log(data)
                let list = ''
                for (clientes of data) {

                    list += `
                    <tr>
                        <td>${clientes.nome}</td>
                        <td>${clientes.cpfcnpj}</td>
                        <td>${clientes.cidade}-${clientes.estado}</td>
                        <td>${clientes.telefone}</td>
                        <td class="text-center">
                            <div class="dropdown no-arrow" id="dropdown-edit" data-id="${clientes.id}" data-nome="${clientes.nome}" data-cnpj="${clientes.cpfcnpj}" data-estado="${clientes.estado}" data-cidade="${clientes.cidade}" data-bairro="${clientes.bairro}" data-rua="${clientes.rua}" data-numero="${clientes.numero}" data-complemento="${clientes.complemento}" data-telefone="${clientes.telefone}" data-email="${clientes.email}" >
                                <a data-id-check="${clientes.id}" class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-black-400"></i>
                                </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                        <a data-id="${clientes.id}" data-nome="${clientes.nome}" data-cnpj="${clientes.cpfcnpj}" data-estado="${clientes.estado}" data-cidade="${clientes.cidade}" data-bairro="${clientes.bairro}" data-rua="${clientes.rua}" data-numero="${clientes.numero}" data-complemento="${clientes.complemento}" data-telefone="${clientes.telefone}" data-email="${clientes.email}" class="dropdown-item mb-1" data-toggle="modal" id="editar" data-target="#Modal-editar"><i class='fas fa-pen' style='font-size:13px'></i><b>  Editar</b></a>
                                        <hr class="sidebar-divider my-0">
                                        <a data-id-delete="${clientes.id}" id="excluir" data-nome-delete="${clientes.nome}" data-cnpj-delete="${clientes.cpfcnpj}" class="dropdown-item mt-1" data-toggle="modal" style="color:#ff1212" data-target="#deletModal"><i class='fas fa-trash' style='font-size:13px'></i> <b>Excluir</b></a>
                                    </div>
                            </div>
                        </td>
                    </tr>`
                }

                $("#clientes").html(list)

            }

        })
    }


    $('#formCliente').on("submit", function (e) {

        e.preventDefault();
        let formData = new FormData($("#formCliente").get(0));

        const data = {};
        formData.forEach((val, key) => {
            data[key] = val;
        });

        $.ajax({
            url: '/novo-cliente',
            method: 'POST',
            dataType: 'json',
            data,
            success: function (response) {
                Swal.fire({
                    title: response.message,
                    icon: 'success',
                    showConfirmButton: false,
                    titleFontSize: '15px'
                })
                setTimeout(function () {
                    location.reload();
                }, 1500);
            }, error: function (e) {
                console.log(e);
            }

        });
    });

    $('#formClienteEdit').on("submit", function (e) {

        e.preventDefault();
        let formData = new FormData($("#formClienteEdit").get(0));

        const data = {};
        formData.forEach((val, key) => {
            data[key] = val;
        });

        $.ajax({

            url: '/edit-cliente',
            method: 'POST',
            dataType: 'json',
            data,
            success: function (response) {
                Swal.fire({
                    title: response.message,
                    icon: 'success',
                    showConfirmButton: false,
                    titleFontSize: '15px'
                })
                setTimeout(function () {
                    location.reload();
                }, 1500);
            }, error: function (e) {
                console.log(e);
            }

        });
    });

    $('#deleteCliente').on("submit", function (e) {

        e.preventDefault();
        let formData = new FormData($("#deleteCliente").get(0));

        const data = {};
        formData.forEach((val, key) => {
            data[key] = val;
        });

        $.ajax({

            url: '/delete-cliente',
            method: 'POST',
            dataType: 'json',
            data,
            success: function (response) {
                Swal.fire({
                    title: response.message,
                    icon: 'success',
                    showConfirmButton: false,
                    titleFontSize: '15px'
                })
                setTimeout(function () {
                    location.reload();
                }, 1500);
            }, error: function (e) {
                console.log(e);
            }

        });
    });

        $("#clientes").on('click', '#dropdown-edit', function () {
    
            let nome = $(this).data('nome')
            let cnpj = $(this).data('cnpj')
            let estado = $(this).data('estado')
            let cidade = $(this).data('cidade')
            let bairro = $(this).data('bairro')
            let rua = $(this).data('rua')
            let numero = $(this).data('numero')
            let complemento = $(this).data('complemento')
            let telefone = $(this).data('telefone')
            let email = $(this).data('email')
            let idCliente = $(this).data('id')
    
            $('#nomeEdit').val(nome);
            $('#cnpjEdit').val(cnpj);
            $('#estadoEdit').val(estado).trigger('change');
            $('#cidadeEdit').val(cidade);
            $('#bairroEdit').val(bairro);
            $('#ruaEdit').val(rua);
            $('#numeroEdit').val(numero);
            $('#complementoEdit').val(complemento);
            $('#telefoneEdit').val(telefone);
            $('#emailEdit').val(email);
            $('#idClienteEdit').val(idCliente);
    
        });


    $("#clientes").on('click', '#excluir', function () {

        let nome = $(this).data('nome-delete')
        let cnpj = $(this).data('cnpj-delete')
        let idCliente = $(this).data('id-delete')

        $('#idClienteDelete').val(idCliente);

        $('.nome-cliente').html('<b>Cliente:</b> ' + nome + '.');
        $('.cnpj-cliente').html('<b>CPF/CNPJ:</b> ' + cnpj + '.');

    });


    function carregarEstados() {
        $.ajax({
            url: 'https://servicodados.ibge.gov.br/api/v1/localidades/estados',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                data.sort((a, b) => a.nome.localeCompare(b.nome));

                $('#estado').empty();
                $('#estado').append('<option value="">Selecione um estado</option>');
                $('#estadoEdit').append('<option value="">Selecione um estado</option>');
                data.forEach(function (estado) {
                    $('#estado').append('<option value="' + estado.sigla + '">' + estado.nome + '</option>');
                    $('#estadoEdit').append('<option value="' + estado.sigla + '">' + estado.nome + '</option>');
                });
            }
        });
    }

    function carregarCidades(estadoSigla) {
        $.ajax({
            url: 'https://servicodados.ibge.gov.br/api/v1/localidades/estados/' + estadoSigla + '/municipios',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                $('#cidade').empty();
                $('#cidadeEdit').empty();

                data.forEach(function (cidade) {
                    $('#cidade').append('<option value="' + cidade.nome + '">' + cidade.nome + '</option>');
                    $('#cidadeEdit').append('<option value="' + cidade.nome + '">' + cidade.nome + '</option>');
                });

            }
        });
    }

    carregarEstados();

    $('#estado').change(function () {
        var estadoSelecionado = $(this).val();
        if (estadoSelecionado) {
            carregarCidades(estadoSelecionado);
        } else {

            $('#cidade').empty();
            $('#cidade').append('<option value="">Selecione um estado</option>');
        }
    });

    $('#estadoEdit').change(function () {
        var estadoSelecionado = $(this).val();
        if (estadoSelecionado) {
            carregarCidades(estadoSelecionado);

        } else {
            $('#cidadeEdit').empty();
            $('#cidadeEdit').append('<option value="">Selecione um estado</option>');
        }
    });

    $('#telefone').inputmask('(99) 99999-9999');
    $('#telefoneEdit').inputmask('(99) 99999-9999');
    

    listClientes();
</script>
