<script>
    function listTipos() {
        $.ajax({
            type: 'GET',
            url: `tipos-pagamento-list`,
            dataType: 'json',
            success: function (data) {
                console.log(data)
                let list = ''
                for (options of data) {

                    list += ` <option value="${options.id}">${options.descricao}</option>`
                }

                $("#optionsTipo").append(list)
                $("#tipo").append(list)
                $("#tipoDespesa").append(list)
            },
            error: function (error) {
                console.error(error);
            }

        })
    };

    function limparInput() {

        $('#fornecedor').val();
        $('#valor').val();
        $('#optionsTipo').val();
        $('#vencimento').val();
        $('#statusPagamentoEdit').val();
        $('#status').val();
        $('#descricao').val();

    }

    function listContas(filter = null) {
        $("#loading").prop("hidden", false);
        $.ajax({
            type: 'POST',
            url: `/contas-pagar-list`,
            data: filter,
            dataType: 'json',
            success: function (data) {
                console.log(data)


                let list = ''
                for (contas of data) {
                    let data = contas.vencimento.split('T')[0]
                    let dataForm = data.split('-');
                    let dia = dataForm[2];
                    let mes = dataForm[1];
                    let ano = dataForm[0];

                    let divContent = '';
                    let divDownload = '';
                    if (contas.status == 'A') {
                        divContent = `
                            <a data-id="${contas.id}" data-cnpj="${contas.cnpj}" data-descricao="${contas.descricao}" data-fornecedor="${contas.fornecedor}" data-idFornecedor="${contas.idFornecedor}" data-idTipo="${contas.idTipo}" data-nomeTipo="${contas.nomeTipo}" data-status="${contas.status}" data-valor="${contas.valor}" data-vencimento="${contas.vencimento}" class="dropdown-item mb-1" data-toggle="modal" id="baixar" data-target="#baixaModal"><i class='fas fa-donate' style='font-size:13px'></i><b>  Pagar</b></a>
                            <hr class="sidebar-divider my-0">
                            `;
                    }

                    if (contas.status == 'P' && contas.comprovante && contas.extensao) {
                        divDownload = `
                            <a class="dropdown-item mb-1" href="/download/${contas.comprovante}/${contas.extensao}"><i class='fas fa-file-download' style='font-size:13px'></i><b>  Comprovante</b></a>
                            <hr class="sidebar-divider my-0">
                            `;
                    }

                    list += `
                    <tr>
                        <td>${contas.fornecedor}</td>
                        <td>${contas.cnpj}</td>
                        <td >${dia}/${mes}/${ano}</td>
                        <td>R$${contas.valor}</td>
                        <td>${contas.status == 'A' ? 'Em aberto' : 'Pago'}</td>
                        <td class="text-center">
                            <div class="dropdown no-arrow">
                                <a data-id-check="${contas.id}" class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-black-400"></i>
                                </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                        ${divContent}
                                        ${divDownload}
                                        <a data-id="${contas.id}" data-cnpj="${contas.cnpj}" data-descricao="${contas.descricao}" data-fornecedor="${contas.fornecedor}" data-idFornecedor="${contas.idFornecedor}" data-idTipo="${contas.idTipo}" data-nomeTipo="${contas.nomeTipo}"   data-status="${contas.status}" data-valor="${contas.valor}" data-vencimento="${contas.vencimento}" class="dropdown-item mb-1 mt-1" data-toggle="modal" id="editar" data-target="#Modal-editar"><i class='fas fa-pen' style='font-size:13px'></i><b>  Editar</b></a>
                                        <hr class="sidebar-divider my-0">
                                        <a data-id-delete="${contas.id}" id="excluir" data-fornecedor="${contas.fornecedor}" data-cnpj="${contas.cnpj}" data-vencimento="${contas.vencimento}" data-valor="${contas.valor}" class="dropdown-item mt-1" data-toggle="modal" style="color:#ff1212" data-target="#deletModal"><i class='fas fa-trash' style='font-size:13px'></i> <b>Excluir</b></a>
                                    </div>
                            </div>
                        </td>
                    </tr>`
                }

                $("#contas").empty();
                $("#contas").html(list)
                $("#loading").prop("hidden", true);

                $('#dataTable').DataTable();

                limparInput();

            },
            error: function () {

                $("#loading").prop("hidden", true);

            }

        })
    }

    function listContasCSV(filter = null) {
        $.ajax({
            type: 'POST',
            url: `/contas-pagar-csv`,
            data: filter,
            dataType: 'json',
            success: function (data) {
                console.log(data);

            }

        })
    }

    function listFornecedores() {
        $.ajax({
            type: 'GET',
            url: `/fornecedores-list`,
            dataType: 'json',
            success: function (data) {
                console.log(data)
                let list = ''
                for (options of data) {

                    list += ` <option value="${options.id}">${options.nome}</option>`
                }

                $("#fornecedor").append(list)
                $("#fornecedorEdit").append(list)
            },
            error: function (error) {
                console.error(error);
            }

        })
    }

    $('#formFiltro').on('submit', function (e) {
        e.preventDefault();
        let formData = new FormData($("#formFiltro").get(0));

        const data = {};
        formData.forEach((val, key) => {
            data[key] = val;
        });

        listContas(data)
        listContasCSV(data)
    });

    $('#btnDownloadCSV').on('click', function () {
        window.location.href = '/pagar-CSV';
    });

    $('#formPagamento').on("submit", function (e) {
        $(".btnSalvar").prop("disabled", true);
        e.preventDefault();
        let formData = new FormData($("#formPagamento").get(0));

        const data = {};
        formData.forEach((val, key) => {
            data[key] = val;
        });

        $.ajax({
            url: '/nova-conta-pagar',
            method: 'POST',
            dataType: 'json',
