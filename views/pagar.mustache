    $('#formContaEdit').on("submit", function (e) {
        $(".btnSalvar").prop("disabled", true);
        e.preventDefault();
        let formData = new FormData($("#formContaEdit").get(0));

        const data = {};
        formData.forEach((val, key) => {
            data[key] = val;
        });

        $.ajax({

            url: '/edit-conta-pagar',
            method: 'POST',
            dataType: 'json',
            data,
            success: function (response) {
                Swal.fire({
                    title: response.message,
                    icon: 'success',
                    showConfirmButton: false,
                    titleFontSize: '15px'
                })
                setTimeout(function () {
                    location.reload();
                }, 1500);
            }, error: function (e) {
                console.log(e);
            }

        });
    });

    $('#deleteConta').on("submit", function (e) {
        $(".btnSalvar").prop("disabled", true);
        e.preventDefault();
        let formData = new FormData($("#deleteConta").get(0));

        const data = {};
        formData.forEach((val, key) => {
            data[key] = val;
        });

        $.ajax({

            url: '/delete-conta-pagar',
            method: 'POST',
            dataType: 'json',
            data,
            success: function (response) {
                Swal.fire({
                    title: response.message,
                    icon: 'success',
                    showConfirmButton: false,
                    titleFontSize: '15px'
                })
                setTimeout(function () {
                    location.reload();
                }, 1500);
            }, error: function (e) {
                console.log(e);
            }

        });
    });

    $('#baixarConta').on("submit", function (e) {
        $(".btnSalvar").prop("disabled", true);
        e.preventDefault();
        let formData = new FormData(this);

        $.ajax({

            url: '/baixar-conta-pagar',
            method: 'POST',
            dataType: 'json',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                Swal.fire({
                    title: response.message,
                    icon: 'success',
                    showConfirmButton: false,
                    titleFontSize: '15px'
                })
                setTimeout(function () {
                    location.reload();
                }, 1500);
            }, error: function (e) {
                console.log(e);
            }

        });
    });

    $("#contas").on('click', '#editar', function () {

        let id = $(this).data('id');
        let descricao = $(this).data('descricao');
        let idFornecedor = $(this).data('idfornecedor');
        let idTipo = $(this).data('idtipo');
        let status = $(this).data('status');
        let valor = $(this).data('valor');
        let vencimento = $(this).data('vencimento');
        let pagou = $('#status').val();

        $('#fornecedorEdit').val(idFornecedor);
        $('#valorEdit').val(valor);
        $('#tipoDespesa').val(idTipo);
        $('#vencimentoEdit').val(vencimento.split('T')[0]);
        $('#statusPagamentoEdit').val(status);
        $('#descricaoEdit').val(descricao);
        $('#idConta').val(id);

    });

    $("#contas").on('click', '#excluir', function () {

        let fornecedor = $(this).data('fornecedor')
        let cnpj = $(this).data('cnpj')
        let valor = $(this).data('valor')
        let vencimento = $(this).data('vencimento')
        let idConta = $(this).data('id-delete')

        let data = vencimento.split('T')[0]
        let dataForm = data.split('-');
        let dia = dataForm[2];
        let mes = dataForm[1];
        let ano = dataForm[0];

        $('#idContaDelete').val(idConta);

