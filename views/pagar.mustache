        $('.vencimento-conta').html('<b>Vencimento:</b> ' + dia + '/' + mes + '/' + ano + '.');
        $('.valor-conta').html('<b>Valor:</b> ' + valor + '.');

    });

    $("#contas").on('click', '#baixar', function () {

        let fornecedor = $(this).data('fornecedor')
